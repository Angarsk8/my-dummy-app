<div class="container main-content">
    <h2 class="text-primary">Add a task you'd like to remember!</h2>
    <div class="form-group">
    </div>
    <button type="button" class="btn btn-primary btn-lg btn-block add-task">Add Task!</button>
    <div class="panels-wrapper">
       
        <% @notes.each do |note| %>
        <div class="panel panel-default" id="panel-<%= note.id %>">
            <div class="panel-heading">
                <h3 class="panel-title custom-typo-title" id="title-<%= note.id %>"><span class="text-info"><%= note.title %></span><span class="pull-right closing-icon">x</span></h3>
            </div>
            <div class="panel-body">
                <div class="custom-typo text-muted" id="content-<%=note.id%>"><%= note.content %></div>
                <div class="timestamps"><small class="text-success"><%= note.created_at.strftime("Created at %m/%d/%Y, %T") %> </small>
                    | <small class="text-warning"><%= note.updated_at.strftime("Updated at %m/%d/%Y, %T") %></small></div>
                <div class="buttons-block">
                    <button type="button" class="delete-button btn btn-danger btn-sm app-button <%= note.id %>">Delete</button>
                    <button type="button" class="edit-button btn btn-warning btn-sm app-button <%= note.id %>">Edit</button>
                </div>
            </div>
        </div>
        <% end %>
        
    </div>
</div>

<div id="input-form" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-primary"><strong>My Dummy App</strong></h4>
            </div>
            <form action="/" method="post" id="task-form">
                <div class="modal-body">
                    <div class="form-group">
                        <h5 class="text-info">Note title</h5>
                        <input type="text" class="form-control custom-typo" name="note_title" id="note-title" placeholder="Write a title for the note">
                    </div>
                    <div class="form-group">
                        <h5 class="text-info">Note Content</h5>
                        <textarea class="form-control custom-typo" rows="4" name="note_content" id="note-content" placeholder="Your content..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="delete-confirm" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-primary"><strong>Are you sure?</strong></h4>
            </div>
            <div class="modal-footer">
            <form id="delete-form" action="/" method="post">
                <input name="_method" type="hidden" value="delete" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <input type="submit" value="Confirm" class="btn btn-primary">
            </form>
            </div>
        </div>
    </div>
</div>